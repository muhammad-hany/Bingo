<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:focusable="true"
                                             android:background="#57cfdd"
                                             android:clickable="true"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.seagate.bingo.GameFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#4baab4"
        android:id="@+id/questionBodyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">


        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/questionBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Question Body"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#4baab4"
        app:layout_constraintTop_toBottomOf="@+id/questionBodyCard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintVertical_bias="0.52"
        android:id="@+id/cardView2"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton

                android:id="@+id/choice1"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="choice 1"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

            <RadioButton
                android:textColor="@android:color/white"
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="choice 2"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

            <RadioButton
                android:textColor="@android:color/white"
                android:id="@+id/choice3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="choice 3"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

            <RadioButton
                android:textColor="@android:color/white"
                android:id="@+id/choice4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="choice 4"
                android:layout_margin="10dp"/>
        </RadioGroup>
    </android.support.v7.widget.CardView>

    <Button
        style="@style/AppTheme.Button"
        android:text="Submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        app:srcCompat="@drawable/ic_splash2"
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
